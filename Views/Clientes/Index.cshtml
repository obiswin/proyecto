@model IEnumerable<admin.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Administrar Clientes</h1>

@section Estilos {
    <link href="/css/style.css rel=" stylesheet"" />
    <link href="https://cdn.datatables.net/2.0.1/css/dataTables.dataTables.css" rel="stylesheet" />
}
<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reestablecer)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reestablecer)
            </td>/*@
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.IdCliente">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js">

    </script>
    <script>
        new DataTable('#example');
    </script>

}